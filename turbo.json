{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "generate": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:migrate:deploy", "^build", "generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^db:generate", "^build", "generate"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^db:generate", "^build", "^test:coverage", "generate"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["generate", "^db:setup"],
      "cache": false,
      "persistent": true
    },
    "db:setup": {
      "cache": false
    },
    "db:migrate:deploy": {},
    "db:migrate:dev": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["db:migrate:deploy"]
    }
  }
}
